<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgPlaylist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/playlist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvPlaylist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toTopOf="@id/tvCategory"
        app:layout_constraintTop_toTopOf="@id/imgPlaylist"
        app:layout_constraintLeft_toRightOf="@id/imgPlaylist"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#333333"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="@id/imgPlaylist"
        app:layout_constraintLeft_toLeftOf="@id/tvPlaylist"
        app:layout_constraintRight_toRightOf="@id/tvPlaylist"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylist" />

</androidx.constraintlayout.widget.ConstraintLayout>